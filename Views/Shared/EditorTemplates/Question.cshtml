@model ESchool.Models.WordExercise.Question
@using ESchool.Helpers


@{
    ViewData["Title"] = "Index";
}


   
        @Html.HiddenFor(m => m.Id)

    <td>
        @Html.DisplayFor(m => m.QuestionNumber) )@Html.DisplayFor(m => m.Questiion) @Html.DisplayFor(m => m.Score)




        @*<label id="correctans" name="@Html.DisplayFor(m => m.Id)" class="rb" style="display:none; color:forestgreen;"><b>@Html.DisplayFor(m => m.Answer)</b></label>*@
    </td>
            

































<div>
    <div>
        @Html.HiddenFor(m => m.Id)
        <div class="row">

            <div class="col-md-5">
                @Html.DisplayFor(m => m.QuestionNumber).)@Html.DisplayFor(m => m.Questiion)

                @if (User.IsInRole(Roles.Admin))
                {
                    @Html.TextBoxFor(m => m.Questiion)
                }
            </div>
            <div class="col-md-5">
                @*@Html.DisplayFor(m => m.Answer)*@
                <div class="form-group">

                    <input asp-for="Answer" class="form-control" />
                    <span asp-validation-for="Answer" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-2">
                @Html.DisplayFor(m => m.Score)

                @if (User.IsInRole(Roles.Admin))
                {
                    @Html.TextBoxFor(m => m.Score)
                }
            </div>
        </div>
    </div>
</div>

