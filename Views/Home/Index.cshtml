<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="padding:15px 4px 15px 4px">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
