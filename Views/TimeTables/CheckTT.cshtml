@model ESchool.Models.CourseTimeTable.TimeTableViewModel

@{
    ViewData["Title"] = "Занятии";
}

<h1>Расписание занятий</h1>

<div>
    <div class="form-group">
        <label name="Название курса:" > @Html.DisplayNameFor(model => model.CourseName)</label>
 
    </div>
    <div class="form-group">
        <label name="Преподаватель:"> @Html.DisplayNameFor(model => model.TeacherId)</label>

    </div>
</div>




<table class="table">
    <thead>
        <tr>
            <th>
                Занятие
            </th>
            <th>
                Дата начала
            </th>
            <th>
                Дата окончания
            </th>
            <th>
                Редактировать
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TTEntries)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Activity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    <a asp-controller="TTEntries" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="TTEntries" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="TTEntries" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Назад</a>
</div>
